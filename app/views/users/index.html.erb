<section>
  <% if @users.any? %>
  <h1>List of All Users</h1>
  
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
      <a href="/users/<%= user.id %>">
        <%= render "components/user-card", user: user  %>
      </a>
      </li>
    <% end %>
  </ul>

  <% else %>
    <h1 >No Users Found</h1>
    <p>Please add users.</p>
  <% end %>
</section>